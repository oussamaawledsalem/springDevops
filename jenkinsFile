pipeline {
    agent any

    tools {
        maven "M2_HOME"
    }

    environment {
        SONAR_HOST_URL = '192.168.174.129:9000'  // Update with your actual SonarQube URL
        SONAR_TOKEN = 'squ_abcd9e7d4a3e63e68dc02be8982a691c2d8dda60'  // Replace with your actual token
    }

    stages {
        stage('GIT') {
            steps {
                git branch: 'main', url: 'https://github.com/oussamaawledsalem/springDevops.git'
            }
        }

        stage('COMPILE') {
            steps {
                sh 'mvn clean compile'
            }
        }

        stage('SONARQUBE ANALYSIS') {
            steps {
                sh """
                mvn sonar:sonar \
                    -Dsonar.host.url=${SONAR_HOST_URL} \
                    -Dsonar.token=${SONAR_TOKEN}
                """
            }
        }

        stage('NEXUS DEPLOY') {
            steps {
                sh 'mvn deploy -DskipTests'
            }
        }
    }
}
