pipeline {
    agent any

    tools {
        maven "M2_HOME"
    }

    environment {
        SONAR_TOKEN = credentials('squ_9294b3bf2711362185ccc30fc572c0ecd3cc7f6d')  // Reference Jenkins credentials securely
    }

    stages {
        stage('GIT') {
            steps {
                git branch: 'main', url: 'https://github.com/oussamaawledsalem/springDevops.git'
            }
        }

        stage('COMPILE') {
            steps {
                sh 'mvn clean compile'
            }
        }

        stage('MVN Sonarqube') {
            steps {
                // Pass the token using the environment variable
                sh "mvn sonar:sonar -Dsonar.login=${SONAR_TOKEN} -Dmaven.test.skip=true"
            }
        }
    }
}
